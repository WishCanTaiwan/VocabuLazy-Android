<?xml version="1.0" encoding="utf-8"?>
<wishcantw.vocabulazy.activities.player.view.PlayerOptionView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/green_2"
    android:clipChildren="false">

<!-- voice play enable or not -->
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:gravity="center_vertical"
        android:background="@color/green_1">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="聲音播放"
            android:textSize="20dp"
            android:textColor="@color/white_1"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center">

            <Switch
                android:id="@+id/player_option_voice_switch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>
        
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:gravity="center_vertical"
        android:layout_marginTop="1dp"
        android:background="@color/green_1"
        android:visibility="gone">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="例句播放"
            android:textSize="20dp"
            android:textColor="@color/white_1"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center">

            <Switch
                android:id="@+id/player_option_sentence_switch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>

    </LinearLayout>

<!-- circumstance -->
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="38dp"
        android:paddingRight="38dp"
        android:layout_marginTop="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="你可以自訂播放的情境"
            android:textSize="12dp"
            android:textColor="@color/white_1"/>

        <RadioGroup
            android:id="@+id/player_option_mode_radio_group"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <wishcantw.vocabulazy.activities.player.view.PlayerOptionRadioButton
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingTop="6dp"
                android:paddingBottom="6dp"
                android:gravity="center"
                android:button="@android:color/transparent"
                android:background="@drawable/player_radio_button"
                android:text="自訂模式"
                android:textColor="@color/grey_2"/>

            <wishcantw.vocabulazy.activities.player.view.PlayerOptionRadioButton
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingTop="6dp"
                android:paddingBottom="6dp"
                android:gravity="center"
                android:button="@android:color/transparent"
                android:background="@drawable/player_radio_button"
                android:text="通勤模式"
                android:textColor="@color/grey_2"/>

            <wishcantw.vocabulazy.activities.player.view.PlayerOptionRadioButton
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingTop="6dp"
                android:paddingBottom="6dp"
                android:gravity="center"
                android:button="@android:color/transparent"
                android:background="@drawable/player_radio_button"
                android:text="運動模式"
                android:textColor="@color/grey_2"/>

        </RadioGroup>

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="38dp"
        android:paddingRight="38dp"
        android:layout_marginTop="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="你可以調整清單的播放順序"
            android:textSize="12dp"
            android:textColor="@color/white_1"/>

        <RadioGroup
            android:id="@+id/player_option_list_order_radio_group"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <wishcantw.vocabulazy.activities.player.view.PlayerOptionRadioButton
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingTop="6dp"
                android:paddingBottom="6dp"
                android:gravity="center"
                android:button="@android:color/transparent"
                android:background="@drawable/player_radio_button"
                android:text="重複清單"
                android:textColor="@color/grey_2"/>

            <wishcantw.vocabulazy.activities.player.view.PlayerOptionRadioButton
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingTop="6dp"
                android:paddingBottom="6dp"
                android:gravity="center"
                android:button="@android:color/transparent"
                android:background="@drawable/player_radio_button"
                android:text="隨機清單"
                android:textColor="@color/grey_2"/>

        </RadioGroup>

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="38dp"
        android:paddingRight="38dp"
        android:layout_marginTop="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="你可以調整單字的播放順序"
            android:textSize="12dp"
            android:textColor="@color/white_1"/>

        <RadioGroup
            android:id="@+id/player_option_voc_order_radio_group"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <wishcantw.vocabulazy.activities.player.view.PlayerOptionRadioButton
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingTop="6dp"
                android:paddingBottom="6dp"
                android:gravity="center"
                android:button="@android:color/transparent"
                android:background="@drawable/player_radio_button"
                android:text="順序播放"
                android:textColor="@color/grey_2"/>

            <wishcantw.vocabulazy.activities.player.view.PlayerOptionRadioButton
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingTop="6dp"
                android:paddingBottom="6dp"
                android:gravity="center"
                android:button="@android:color/transparent"
                android:background="@drawable/player_radio_button"
                android:text="隨機播放"
                android:textColor="@color/grey_2"/>

        </RadioGroup>

    </LinearLayout>


    <include
        layout="@layout/view_player_option_seekbars"
        android:id="@+id/player_option_seekbars"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</wishcantw.vocabulazy.activities.player.view.PlayerOptionView>
